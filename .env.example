# Web Server Configuration
PORT=8000
FLASK_ENV=development
FLASK_DEBUG=True
HOST=0.0.0.0

# Security
# Generate a secure random secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-here-change-in-production
CSRF_SECRET_KEY=your-csrf-secret-here-change-in-production

# File Storage Limits
MAX_FILE_SIZE=104857600        # 100MB in bytes
MAX_STORAGE_SIZE=5368709120    # 5GB in bytes

# Database
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/logs/app.log

# Authentication
AUTH_ENABLED=false
TOKEN_EXPIRY_HOURS=24

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Feature Flags
WEBSOCKETS_ENABLED=true
FILE_UPLOADS_ENABLED=true
COMMAND_EXECUTION_ENABLED=true
TUNNEL_MANAGEMENT_ENABLED=true

# Tunnel Configuration
NGROK_AUTHTOKEN=your-ngrok-token-here
CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-token-here

# Privileged Execution
# Optional: Directory to store privileged credentials securely
# CREDENTIALS_DIR=/path/to/secure/credentials

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# Development
RELOAD_ON_CHANGE=true
